#version 420 core
layout (location = 0) in vec3 aPos;

uniform mat4 model;
uniform vec3 positions[40];

layout (std140) uniform VP{
	mat4 projection;
	mat4 view;
};

void main(){
	gl_Position = projection * view * model * vec4(aPos + positions[gl_InstanceID] , 1.0f);
	gl_PointSize = abs(aPos.z) * 20;
};